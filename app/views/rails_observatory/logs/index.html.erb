<% content_for(:title, 'Logs') %>

<style>
  @scope {
    :scope {
      display: grid;
      gap: 2rem;
      grid-template-columns: minmax(400px, 1fr);
    }
  }
</style>

<%= render 'chart', type: 'bar', series: @logs_by_type, name: 'Log Volume' %>

<div class="card">
  <h2>Recent Logs</h2>
  <%= render 'query_table', events: @recent_logs, fields: [:timestamp, :level, :message, :request_id] %>
</div>